<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customcontrols="clr-namespace:MovieRatingApp.CustomControls"
             x:Class="MovieRatingApp.CustomControls.StarControl">

    <ContentView.ControlTemplate>
        <ControlTemplate>

            <Frame>
                <HorizontalStackLayout>
                    <!--<customcontrols:StarButton ImageSource="Images/star.png"/>-->
                    <Button x:Name="1" BackgroundColor="DarkGray" Clicked="First_Clicked"/>
                    <Button x:Name="2" BackgroundColor="DarkGray" Clicked="Second_Clicked"/>
                    <Button x:Name="3" BackgroundColor="DarkGray" Clicked="Third_Clicked"/>
                    <Button x:Name="4" BackgroundColor="DarkGray" Clicked="Fourth_Clicked"/>
                    <Button x:Name="5" BackgroundColor="DarkGray" Clicked="Fifth_Clicked"/>
                    <ContentPresenter/>
                </HorizontalStackLayout>
                
            </Frame>
            

            
        </ControlTemplate>
    </ContentView.ControlTemplate>
    
    
</ContentView>
